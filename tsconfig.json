{
    "compilerOptions": {
        "outDir": "build",
        "module": "commonjs",
        "target": "esnext",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true
    },
    "exclude": [
        "node_modules"
    ]
}